#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../dependency-cruiser/bin/wrap-stream-in-html.mjs" "$@"
else 
  exec node  "$basedir/../dependency-cruiser/bin/wrap-stream-in-html.mjs" "$@"
fi
